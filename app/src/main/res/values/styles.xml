<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--倒计时的自定义属性-->
    <declare-styleable name="CountDownProgressBar">
        <!--默认圆环-->
        <attr name="default_ring_color" format="color"/>
        <attr name="default_ring_width" format="dimension"/>
        <!--进度条-->
        <attr name="progress_color" format="color"/>
        <attr name="progress_width" format="dimension"/>
        <!--文字-->
        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color"/>
        <!--时间-->
        <attr name="count_down_time" format="integer"/>
        <!--文字与圆圈的留白-->
        <attr name="text_ring_space" format="dimension"/>
    </declare-styleable>
</resources>
